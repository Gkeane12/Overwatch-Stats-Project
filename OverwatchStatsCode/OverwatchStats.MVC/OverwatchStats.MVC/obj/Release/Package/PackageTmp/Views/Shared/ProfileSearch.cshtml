@model OverwatchStats.MVC.Models.ProfileModel
<div display="inline" class="navbar-right profileSearch" padding ="8px">
    @using (Html.BeginForm("Profile", "Profile", FormMethod.Get, new { @class = "form-inline" }))
    {
        <div class="form-group">
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
        </div>


        <div class="form-group">
            @Html.EnumDropDownListFor(model => model.Region, null, htmlAttributes: new { @class = "form-control profile-dropdown" })
        </div>


        <div class="form-group" max-width="70px">
            @Html.EnumDropDownListFor(mode => mode.Platform, null, htmlAttributes: new { @class = "form-control profile-dropdown"})
        </div>


        <div class="form-group">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    }
</div>